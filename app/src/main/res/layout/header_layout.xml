<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_white"
    android:elevation="4dp"
    android:theme="@style/ThemeOverlay.AppCompat.Light">

    <!-- Modern Header Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/primary_white"
        android:paddingHorizontal="16dp"
        app:contentInsetStart="0dp"
        app:contentInsetEnd="0dp">

        <!-- Left Section: Menu/Logo -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- App Logo -->
            <ImageView
                android:id="@+id/iv_app_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_medibook_logo"
                android:contentDescription="MediBook Logo"
                android:layout_marginEnd="12dp" />

            <!-- App Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/accent_blue"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Right Section: Actions -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_gravity="end">

            <!-- Search Button -->
            <ImageButton
                android:id="@+id/btn_search"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_search"
                android:background="@drawable/ripple_circle_background"
                android:contentDescription="Search"
                android:layout_marginEnd="8dp" />

            <!-- Notifications Button -->
            <ImageButton
                android:id="@+id/btn_notifications"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_notifications"
                android:background="@drawable/ripple_circle_background"
                android:contentDescription="Notifications"
                android:layout_marginEnd="8dp" />

            <!-- Profile Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_profile"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_user_placeholder"
                    android:scaleType="centerCrop"
                    android:contentDescription="User Profile" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Location Bar (Optional) -->
    <LinearLayout
        android:id="@+id/location_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_light_gray"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_location"
            android:layout_marginEnd="8dp"
            android:contentDescription="Location" />

        <TextView
            android:id="@+id/tv_current_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Colombo, Sri Lanka"
            android:textSize="14sp"
            android:textColor="@color/text_secondary" />

        <ImageButton
            android:id="@+id/btn_change_location"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_dropdown"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Change Location" />

    </LinearLayout>

</com.google.android.material.appbar.AppBarLayout>
