<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    android:background="@color/primary_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_medium"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivDoctorPhoto"
            android:layout_width="@dimen/icon_size_xlarge"
            android:layout_height="@dimen/icon_size_xlarge"
            android:layout_marginEnd="@dimen/margin_medium"
            android:background="@drawable/card_background"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_doctor"
            android:contentDescription="Doctor Photo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDoctorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dr. Saman Kumara"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="@dimen/margin_small" />

            <TextView
                android:id="@+id/tvSpecialization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cardiology"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/accent_blue"
                android:layout_marginBottom="@dimen/margin_small" />

            <TextView
                android:id="@+id/tvHospital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Asiri Hospital - Colombo"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/text_secondary"
                android:drawableStart="@drawable/ic_hospital"
                android:drawablePadding="@dimen/padding_small"
                android:gravity="center_vertical" />

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            android:src="@drawable/ic_consultation"
            android:layout_marginStart="@dimen/margin_small"
            android:contentDescription="Book Appointment" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
